                      label.js-quality for='quality5'
                        .btn
                          | 標準見本
                      input#quality5 type= 'checkbox' class= 'd-none'
                      = f.hidden_field :quality5, id: 'q-quality5'
                    .quality-label
                      label.js-quality for='quality6'
