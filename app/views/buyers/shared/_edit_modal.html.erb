<!-- モーダル 変更-->
<div class="modal fade" id="modal-default2--category-change">
  <div class="modal-dialog modal-default2--category-change">
    <div class="modal-content">
      <%= form_for :catalog, url: url, html: { id:'catalog_form_edit' }, method:method do |f| %>
          <div class="modal-header align-items-center modal-header--ordering">
          <% if catalog&.level_type.eql? 'parent' %>
            <h6 class="modal-title">カテゴリー名: <%= catalog.name %></h6>
          <% end %>
          <% if catalog&.level_type.eql? 'sub_catalog' %>
            <h6 class="modal-title">サブカテゴリー名: <%= catalog&.name %></h6>
          <% end %>
          <% if catalog&.level_type.eql? 'grandchild_catalog' %>
            <h6 class="modal-title">孫カテゴリー名: <%= catalog&.name %></h6>
          <% end %>
          <button type="reset" class="close" data-dismiss="modal" role="button" data-target="#modal-default2--category-change" data-toggle="modal">
            <span class="align-middle" aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h5 class="text-center pt-3">以下を入力してください</h5>
          <div class="input-group input-group--modal mt-4 mb-4">
            <label for="form-modal-subcategory">
              <% if catalog&.level_type.eql? 'parent' %>
                <span>カテゴリー名</span>
              <% end %>
              <% if catalog&.level_type.eql? 'sub_catalog' %>
                <span>サブカテゴリー名</span>
              <% end %>
              <% if catalog&.level_type.eql? 'grandchild_catalog' %>
                <span>孫カテゴリー名</span>
              <% end %>
            </label>
            <%= f.text_field :name, id: "form-modal-subcategory", class: "form-control form-control--ie", placeholder: "例）サブカテゴリー名", required: "required"%>
          </div>
        </div>
        <div class="modal-footer justify-content-between modal-footer--ordering">
          <button type="reset" class="btn btn-default" role="button" data-target="#modal-default2--category-change" data-toggle="modal">閉じる</button>
          <button type="submit" class="btn newji-btn--pink">保存</button>
        </div>
      <% end %>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
