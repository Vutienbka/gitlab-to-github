<!-- モーダル -->
        <div class="modal fade" id="modal-default2--category-delete">
          <div class="modal-dialog modal-default">
            <div class="modal-content">
            <%= form_for :catalog, url: url, html: { id:'catalog_form_delete' }, method:method do |f| %>
                <div class="modal-header align-items-center modal-header--ordering">
                  <% if catalog&.level_type.eql? 'parent' %>
                  <h6 class="modal-title delete-modal-title-catalog">カテゴリー名: <%= catalog&.name %></h6>
                  <% end %>
                  <% if catalog&.level_type.eql? 'sub_catalog' %>
                    <h6 class="modal-title delete-modal-title-sub-catalog">サブカテゴリー名: <%= catalog&.name %></h6>
                  <% end %>
                  <% if catalog&.level_type.eql? 'grandchild_catalog' %>
                    <h6 class="modal-title delete-modal-title-grandchild-catalog">孫カテゴリー名: <%= catalog&.name %></h6>
                  <% end %>
                  <button type="reset" class="close" role="button" data-target="#modal-default2--category-delete" data-toggle="modal">
                    <span class="align-middle" aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h5 class="text-center pt-3">本当に削除しますか？<br /><span class="company-color">※削除した後に<span class="textbr">取り消しができません</span></span></h5>
                </div>
                <div class="modal-footer justify-content-between modal-footer--ordering">
                  <button type="reset" class="btn btn-default" role="button" data-target="#modal-default2--category-delete" data-toggle="modal">閉じる</button>
                  <button type="submit" class="btn newji-btn--pink">削除</button>
                </div>
                <% end %>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
    