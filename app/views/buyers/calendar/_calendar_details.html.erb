<% content_for :head do %>
  <%= stylesheet_link_tag 'buyer/calendar' %>
<% end %>

<%= month_calendar do |date| %>
  <div class="text-center text-bold">
    <div class="<%= 'active-day' if date == @date %>"></div>&nbsp;
    <%= date == date.beginning_of_month ? date.strftime("%m月%d日") : date.strftime("%d") %>	
  </div>
  <div class="day_box">
    <div class="day_box-content-calendar">
        <span>Always deliver more than expected.</span>
    </div>
    <div class="day_box-content-calendar">
      <%= link_to "Add event", new_user_calendar_path(start_date: date) %>
    </div>
    <% if @user_calendars[date].present? %>
      <% @user_calendars[date].each do |event|%>
        <div class="day_box-content-calendar">
          <span><%= event.title %></span>
        </div>
      <% end %>
    <% end %>
	</div>
<% end %>
