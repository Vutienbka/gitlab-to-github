<% content_for :title, 'NEWJI | サンプル/見本' %>
<% breadcrumb_add 'サンプル'%>
<% breadcrumb_add '見本'%>

<% content_for :content_header do %>
        <div class="row mb-2">
          <div class="col-sm-6">
            <ol class="breadcrumb breadcrumb--sample float-sm-left float-right">
              <li class="breadcrumb-item font-bold">2</li>
              <li class="breadcrumb-item">2&nbsp;サンプル内容入力</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="card card--login">
          <div class="card-body login-card-body">
            <p class="login-head text-center mb-5">以下を入力してください</p>
            <form action="complete-sample.html" method="post">
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label mt-5 mb-4">
                <label for="form-label-sample-title">
                  <span class="required-txt">必須</span>
                  <span>タイトル</span>
                </label>
                <input id="form-label-sample-title" type="text" class="form-control form-control--ie" placeholder="例）〇〇〇〇" name="sample-title" required>
              </div>
              <div class="input-group input-group--has-checkbox mt-5 mb-4">
                <label for="form-label-address">
                  <span class="required-txt">必須</span>
                  <span>分類</span>
                </label>
                <div class="w-100 flex flex-wrap">
                  <!--type="checkbox"に変更しても同じデザイン-->
                  <input type="radio" name="sample-classification" value="1" id="apple" class="choose">
                  <label for="apple" class="label label--with-input">新製品</label>
                  <input type="radio" name="sample-classification" value="2" id="pineapple" class="choose">
                  <label for="pineapple" class="label label--with-input">既存品</label>
                </div>
              </div>
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label mt-5 mb-4">
                <label for="form-label-sample-code">
                  <span class="required-txt">必須</span>
                  <span>コード</span>
                </label>
                <input id="form-label-sample-code" type="text" class="form-control form-control--ie" name="item-code" placeholder="例）GD2020N00" required>
              </div>
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label mt-5 mb-1">
                <label for="form-label-apattern">
                  <span class="required-txt required-txt--any">任意</span>
                  <span>パターン1</span>
                </label>
                <input id="form-label-pattern" type="text" class="form-control form-control--ie" placeholder="例）〇〇" name="sample-pattern">
              </div>
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label">
                <div class="input-group__add">
                  <i class="fas fa-plus input-plus"></i>
                  <a href="#" class="input-add">パターンを追加</a>
                </div>
                <input id="form-nolabel-claim-lot-umber" type="text" class="form-control form-control--ie mt-3 d-none" placeholder="例）3" name="sample-pattern2">
              </div>
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label mt-5 mb-4">
                <label for="form-label-amount">
                  <span class="required-txt">必須</span>
                  <span>数量</span>
                </label>
                <input id="form-label-amount" type="number" class="form-control form-control--ie form-control--firefox" placeholder="半角数字でご入力ください。" name="sample-quantity" value="1" required>
              </div>
              <div class="input-group input-group--has-uploader input-group--has-uploader--has-label mt-5 mb-4">
                <label for="form-label-nouki">
                  <span class="required-txt required-txt--any">任意</span>
                  <span>希望納期</span>
                </label>
                <input type="text" class="form-control form-control--ie form-control--readonly" id="form-label-nouki" placeholder="日付を選択してください。" name="sample-delivery-date" readonly="readonly">
              </div>
              <div class="input-group input-group--has-checkbox mt-5 mb-4">
                <label for="form-label-address">
                  <span class="required-txt">必須</span>
                  <span>形状</span>
                </label>
                <div class="w-100 flex flex-wrap">
                  <!--type="checkbox"に変更しても同じデザイン-->
                  <input type="radio" name="sample-shape" value="1" id="green-apple" class="choose">
                  <label for="green-apple" class="label label--with-input">製品</label>
                  <input type="radio" name="sample-shape" value="2" id="strawberry" class="choose">
                  <label for="strawberry" class="label label--with-input">プレート</label>
                </div>
              </div>
              <div class="input-group input-group--has-checkbox mt-5 mb-4">
                <label for="form-label-address">
                  <span class="required-txt">必須</span>
                  <span>配送リクエスト</span>
                </label>
                <div class="w-100 flex flex-wrap">
                  <!--type="checkbox"に変更しても同じデザイン-->
                  <input type="radio" name="sample-delivery" value="1" id="avocado" class="choose">
                  <label for="avocado" class="label label--with-input">クーリエ</label>
                  <input type="radio" name="sample-delivery" value="2" id="orange" class="choose">
                  <label for="orange" class="label label--with-input">船便</label>
                  <input type="radio" name="sample-delivery" value="2" id="raspberry" class="choose">
                  <label for="raspberry" class="label label--with-input">同梱</label>
                </div>
              </div>
              <div class="input-group input-group--has-checkbox mt-5 mb-4">
                <label for="form-label-address">
                  <span class="required-txt">必須</span>
                  <span>用途</span>
                </label>
                <div class="w-100 flex flex-wrap">
                  <!--type="checkbox"に変更しても同じデザイン-->
                  <input type="radio" name="sample-use" value="1" id="kiwi" class="choose">
                  <label for="kiwi" class="label label--with-input">サンプル</label>
                  <input type="radio" name="sample-use" value="2" id="grapefruit" class="choose">
                  <label for="grapefruit" class="label label--with-input">標準見本</label>
                  <input type="radio" name="sample-use" value="2" id="coconut" class="choose">
                  <label for="coconut" class="label label--with-input">限度見本</label>
                </div>
              </div>
              <div class="row">
                <button type="submit" class="btn w-30 newji-btn--blue w-60--sp mt-5" onclick=”return check()”>新規作成</button>
              </div>
            </form>
          <!-- /.login-card-body -->
          </div>
        </div>
        <!-- /.card -->
        <div class="w-100 text-center mt-5 margin-bottom30">
          <a href="<%=new_buyers_sample_path%>" class="to-top">前に戻る</a>
        </div>
  <%end%>