<span><%= "#{t "forgot_your_password"}" %><br>
<%= t "forgot_your_password_title" %></h4><span>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true %>
  </div>

  <div class="actions">
    <%= f.submit t "devise.passwords.new.send_me_reset_password_instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
