<% content_for :head do %>
  <%= stylesheet_link_tag 'buyer/change_password' %>
  <%= javascripts 'buyer/change_password' %>
<% end %>

<div class="container">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="title_change">
    <h2>パスワードを変更する</h2>
  </div>
	<div class="row change_pass">
		<div class="content_pass">
		  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <%= f.label :current_password %>
		    <div class="form-group pass_show"> 
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: true, class:"form-control" %>
        </div> 

        <%= f.label :password %>
        <div class="form-group pass_show"> 
          <%= f.password_field :password, autocomplete: "new-password", placeholder: true , class:"form-control"%>
        </div> 

        <%= f.label :password_confirmation %>
        <div class="form-group pass_show"> 
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: true, class:"form-control" %>
        </div> 

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-pro btn-horver" %>
        </div>
      <% end %>
		</div>  
	</div>
</div>