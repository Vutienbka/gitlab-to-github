<% content_for :title, 'NEWJI | マイカタログ' %>
<% breadcrumb_add 'マイカタログ' %>
<%= javascripts 'buyer/supplier_catalog' %>

<% content_for :content_header do %>
        <div class="card card--login card--login--only-vertical">
          <div class="card-body">
            <p class="login-head text-center pb-3">バイヤーを検索してください</p>
            <h5 class="w-90 w-100--tab text-left my-catalog-head mb-3">
              キーワードで検索
            </h5>
            <%= search_form_for @q, url:search_suppliers_catalogs_path do |f| %>
            <div class="input-group">
              <%= f.text_field :first_name_or_last_name_cont, class: "form-control form-control-navbar form-control--ie", placeholder: "〇〇、〇〇などで検索", id:"search_catalog_buyer" %><br>
              <div class="input-group-append">
                <%= f.submit '検索', class: "sbtn5" %>
              </div>
            </div>
            <% end %>
            <div class="w-90 w-100--tab">
              <div class="row mt-5 mb-3">
                <div class="col-sm-7 col-md-9 col-12 h-100">
                  <h5 class="text-left my-catalog-head mt-2">
                    よく見るバイヤーから選択(仮)
                  </h5>
                </div>
                <div class="col-md-3 col-5 align-items-end d-none d-sm-block h-100">
                  <a href="introduce--s.html" class="btn w-100 newji-btn--gray text-center btn-right-top">バイヤーを招待</a>
                </div>
              </div>
            </div>
            <div class="w-90 w-100--tab">
              <div class="row">
                <% @list_buyers.each do |f|%>
                <div class="col-md-3 col-12 mb-1">
                  <a href="<%=catalog_parents_suppliers_catalogs_path(f.buyer_id)%>" class="card shadow-none border text-left category-item-content">
                    <input type ="hidden" name="buyer_id" value="<%=f.buyer_id%>">
                    <h6 class="category-name"><%=f.first_name%></h6>
                    <h6 class="category-name--code"><small>アイテム数：<%=Catalog.where(level_type: 'parent', buyer_id: f.buyer_id)&.size%></small></h6>
                  </a>
                </div>
                <% end %>
              </div>
            </div>
            <div class="w-100 text-center d-block d-sm-none">
              <button type="button" class="btn w-30 newji-btn--gray w-60--sp w-90--sp--450" role="button" data-target="#modal-default" data-toggle="modal">カテゴリーを追加する</button>
            </div>
            <!--
            <div class="row">
              <button type="submit" class="btn w-30 newji-btn--gray w-60--sp w-90--sp--450">カテゴリーを<span class="textbr">もっと表示</span></button>
            </div>
            -->
          <!-- /.login-card-body -->
          </div>
        </div>
<% end %>